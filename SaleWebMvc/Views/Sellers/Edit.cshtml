@model SaleWebMvc.Models.ViewModels.SellerFormViewModel

@{
	ViewData["Title"] = "Editar VENDEDOR";
}

<h2>@ViewData["Title"]</h2>

<h4>Vendedores</h4>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<input type="hidden" asp-for="seller.id" />
			<div class="form-group">
				<label asp-for="seller.name" class="control-label">Nome</label>
				<input asp-for="seller.name" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="seller.email" class="control-label">Email</label>
				<input asp-for="seller.email" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="seller.birthDate" class="control-label">Data de Nascimento</label>
				<input asp-for="seller.birthDate" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="seller.baseSalary" class="control-label">Salario</label>
				<input asp-for="seller.baseSalary" class="form-control" />
			</div>
			<div class="form-group">
				<label asp-for="seller.DepartmentId" class="control-label"></label>
				<select asp-for="seller.DepartmentId" asp-items="@(new SelectList(Model.departments, "id", "name"))" class="form-control"></select>
			</div>
			<div class="form-group">
				<input type="submit" value="Salvar" class="btn btn-default" />
				<a asp-action="Index">Voltar</a>
			</div>
		</form>

	</div>
</div>

