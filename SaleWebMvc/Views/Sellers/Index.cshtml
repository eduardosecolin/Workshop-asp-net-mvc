
@model IEnumerable<SaleWebMvc.Models.Seller>

@{
	ViewData["Title"] = "VENDEDORES";
}

<h2>@ViewData["Title"]</h2>

<p>
	<a asp-action="Create" class="btn btn-default">Cadastrar</a>
</p>

<table class="table table-striped table-hover">
	<thead>
		<tr class="success">
			<th>@Html.DisplayNameFor(model => model.name)</th>
			<th>@Html.DisplayNameFor(model => model.email)</th>
			<th>@Html.DisplayNameFor(model => model.birthDate)</th>
			<th>@Html.DisplayNameFor(model => model.baseSalary)</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model) {
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.email)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.birthDate)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.baseSalary)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.id">Editar </a> |
					<a asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
					<a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>

